{
    "name": "goita-online",
    "version": "0.3.0",
    "description": "goita-online server & web client",
    "main": "dist/server.js",
    "scripts": {
        "start": "node dist/server.js",
        "debug": "nodemon dist/server.js",
        "build": "npm run build-sass && npm run build-ts && npm run webpack",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Webpack,Node\" -c \"yellow.bold,cyan.bold,blue,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-webpack\" \"nodemon dist/server.js\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
        "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
        "webpack": "webpack",
        "watch-webpack": "webpack -w",
        "test": "jest --forceExit",
        "test-watch": "karma start --no-single-run --auto-watch",
        "docker-watch": "yarn add --force node-sass && yarn run watch"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/Goita/goita-online.git"
    },
    "keywords": [
        "goita"
    ],
    "author": "yoskeoka",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Goita/goita-online/issues"
    },
    "homepage": "https://github.com/Goita/goita-online",
    "dependencies": {
        "async": "^2.1.2",
        "bcrypt-nodejs": "^0.0.3",
        "body-parser": "^1.15.2",
        "bootstrap": "^3.3.7",
        "compression": "^1.6.2",
        "connect-mongo": "^1.3.2",
        "dotenv": "^4.0.0",
        "errorhandler": "^1.4.3",
        "express": "^4.14.0",
        "express-flash": "^0.0.2",
        "express-session": "^1.15.3",
        "express-validator": "^3.1.3",
        "fbgraph": "^1.3.0",
        "goita-core": "^0.1.10",
        "ion-sound": "^3.0.7",
        "jquery": "^3.2.1",
        "lodash": "^4.17.4",
        "lusca": "^1.4.1",
        "mongoose": "^4.6.6",
        "morgan": "^1.7.0",
        "nocache": "^2.0.0",
        "nodemailer": "^2.6.4",
        "passport": "0.3.2",
        "passport-facebook": "^2.1.1",
        "passport-local": "^1.0.0",
        "pug": "^2.0.0-rc.2",
        "request": "^2.78.0",
        "socket.io": "^2.0.0"
    },
    "devDependencies": {
        "@types/async": "^2.0.40",
        "@types/body-parser": "^1.16.2",
        "@types/bootstrap": "^3.3.33",
        "@types/connect-mongo": "0.0.32",
        "@types/dotenv": "^4.0.0",
        "@types/errorhandler": "0.0.30",
        "@types/express": "^4.0.35",
        "@types/express-session": "1.15.0",
        "@types/jest": "^19.2.2",
        "@types/jquery": "^2.0.46",
        "@types/lodash": "^4.14.63",
        "@types/mongodb": "^2.1.43",
        "@types/mongoose": "^4.7.9",
        "@types/morgan": "^1.7.32",
        "@types/node": "^7.0.12",
        "@types/nodemailer": "^1.3.32",
        "@types/passport": "^0.3.3",
        "@types/passport-facebook": "^2.1.4",
        "@types/request": "0.0.42",
        "@types/socket.io": "^1.4.29",
        "@types/supertest": "^2.0.0",
        "concurrently": "^3.4.0",
        "copy-webpack-plugin": "^4.0.1",
        "json-loader": "^0.5.4",
        "node-sass": "^4.5.3",
        "nodemon": "^1.11.0",
        "source-map-loader": "^0.2.0",
